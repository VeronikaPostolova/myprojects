@using Bit_Calculator.ViewModels
@model IEnumerable<UnitVM>
@{
    ViewBag.Title = "ShowBits";
}

<h2>ShowBits</h2>

<form action="/BitsCalculator/ShowBits" method="get">
    <label>Quantity</label>
    <input type="text" name="Quantity" value="@((ViewBag.Quantity == 0 || ViewBag.Quantity == null) ? 1 : ViewBag.Quantity)" />

    <label>Type</label>
    <select name="Type">
        @foreach (var unit in Model)
        {
            <option value="@unit.Name" selected="@(ViewBag.SelectedType == unit.Name ? true : false )">@unit.Name</option>
        }
    </select>

    <label>Kilo</label>
    <select name="Kilo">
        <option value="1000" selected="@(ViewBag.SelectedKilo == 1000 ? true : false)">1000</option>
        <option value="1024" selected="@(ViewBag.SelectedKilo == 1024 ? true : false)">1024</option>
    </select>
    <br />
    <input type="submit" value="GO" />
</form>

<table class="table table-striped">
    @foreach (var unit in Model)
{
    <tr>
        <td>@unit.Name</td>
        <td>@string.Format("{0}", unit.Value)</td>
    </tr>
}
</table>

