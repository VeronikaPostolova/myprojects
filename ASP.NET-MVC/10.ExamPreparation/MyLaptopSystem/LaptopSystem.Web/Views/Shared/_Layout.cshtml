@using Microsoft.AspNet.Identity

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/kendo")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/kendo")
</head>
<body>
    <div class="container navbar-fixed-top">
        @(Html.Kendo().Menu()
                .Name("Kendo-Menu")
                .Items(items =>
                    {
                        if (User.Identity.IsAuthenticated)
                        {
                            items.Add().Text("Home").Action("Index", "Home");
                            items.Add().Text("Laptops").Action("Index", "Laptops");

                            if (User.IsInRole("Admin"))
                            {
                                items.Add().Text("Laptops Admin").Action("Index", "LaptopsAdmin");
                                items.Add().Text("Comments Admin").Action("Index", "CommentsAdmin");
                                items.Add().Text("Manufacturers Admin").Action("Index", "ManufacturersAdmin");
                            }
                            
                            items.Add().Text("Logout").HtmlAttributes(new { onclick = "getElementById('logoutForm').submit()", style = "float:right" });
                            items.Add().Text("Hello, " + User.Identity.GetUserName() + "!").Action("Manage", "Account").HtmlAttributes(new { style = "float:right" });
                        }
                        else
                        {
                            items.Add().Text("Home").Action("Index", "Home");
                            items.Add().Text("Login").Action("Login", "Account");
                            items.Add().Text("Register").Action("Register", "Account");
                        }
                    }))
        </div>
    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Laptop System</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm" }))
    {
        @Html.AntiForgeryToken()
    }
</body>
</html>
